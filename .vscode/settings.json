{
    "files.eol": "\n",
    "editor.codeActionsOnSave": {
        "source.addMissingImports.ts": "explicit",
        "source.organizeImports": "never" // Orgenize using Prettier instead
    },

    "tailwindCSS.classAttributes": ["class", "className", "ngClass", ".*Style"],
    "files.associations": {
        "*.scss": "tailwindcss"
    },

    "prettier.singleQuote": false,
    "prettier.useTabs": false,
    "prettier.printWidth": 140,
    "prettier.tabWidth": 4,

    "cSpell.words": ["clsx", "Damerau", "Plasmo", "plasmohq", "preact", "Songsterr", "tailwindcss", "tsyringe", "webextension"]
}
