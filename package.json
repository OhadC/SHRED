        "js-logger": "^1.6.1",
        "lodash": "^4.17.21",
        "plasmo": "0.84.0",
        "react": "18.2.0",
        "react-dom": "18.2.0",
        "react-use": "^17.4.2",
        "styled-components": "^6.1.1",
        "webextension-polyfill": "^0.10.0"
