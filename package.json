{
    "name": "SHRED",
    "displayName": "SHRED",
    "version": "2.0.0",
    "description": "Browser Extension: Guitar tabs for music streaming services",
    "author": "Plasmo Corp. <foss@plasmo.com>",
    "scripts": {
        "dev": "plasmo dev",
